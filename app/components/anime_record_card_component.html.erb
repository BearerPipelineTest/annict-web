<div class="c-work-record-card c-record-card card col-11 col-lg-10 mb-2 px-0">
  <div class="card-body p-2">
    <div class="row">
      <div class="col-auto pr-0">
        <%= link_to anime_path(anime_id: @anime_entity.database_id) do %>
          <%= render WorkImageComponent.new(
              image_url_1x: @anime_entity.image_url_1x,
              image_url_2x: @anime_entity.image_url_2x,
              alt: @anime_entity.local_title
          ) %>
        <% end %>
      </div>

      <div class="col">
        <div class="mb-1">
          <%= link_to @anime_entity.local_title, anime_path(anime_id: @anime_entity.database_id), class: "d-block" %>
        </div>

        <%= render StatusSelectorComponent.new(work_id: @anime_entity.database_id, page_category: "user-home", small: true) %>
      </div>
    </div>
  </div>
</div>
