<div
  class="align-items-center c-work-picture d-flex justify-content-center m-auto <%= @class_name %>"
  style="width: <%= @width %>px;"
>
  <picture>
    <source type="image/webp" srcset="<%= source_srcset("webp") %>">
    <source type="image/jpeg" srcset="<%= source_srcset("jpg") %>">
    <img
      alt="<%= @alt %>"
      class="img-thumbnail"
      loading="lazy"
      src="<%= helpers.ann_image_url(@work_image, :image, width: @width, format: "jpg") %>"
    >
  </picture>
</div>
