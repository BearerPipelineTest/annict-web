<div
  class="c-flash d-none"
  data-controller="flash"
  data-flash-type="<%= flash_type %>"
  data-flash-message="<%= flash[flash_type] %>"
>
  <div class="alert alert-dismissible align-content-center border-0 d-flex mb-0 rounded-0">
    <i class="c-flash__alert-icon far h2 mb-0 mr-2"></i>
    <span class="c-flash__message"></span>

    <button aria-label="Close" class="close" data-dismiss="alert" type="button">
      <i aria-hidden="true" class="fas fa-times"></i>
    </button>
  </div>
</div>
