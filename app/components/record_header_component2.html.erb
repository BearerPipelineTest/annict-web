<div class="c-record-header row">
  <div class="col-auto pr-0">
    <%= link_to profile_path(@record.user.username) do %>
      <%= render ProfileImageComponent.new(
          image_url_1x: @record.user.avatar_url(size: "50x50"),
          alt: "@#{@record.user.username}",
          lazy_load: false
      ) %>
    <% end %>
  </div>

  <div class="col">
    <div>
      <%= link_to profile_path(@record.user.username), class: "font-weight-bold mr-1 text-body" do %>
        <span class="mr-1">
          <%= @record.user.name %>
        </span>

        <small class="text-muted">
          @<%= @record.user.username %>
        </small>
      <% end %>

      <% if @record.user.supporter? && !@record.user.setting.hide_supporter_badge? %>
        <span class="badge u-badge-supporter">
          <%= t "noun.supporter" %>
        </span>
      <% end %>
    </div>

    <div>
      <%= link_to record_path(@record.user.username, @record.id), class: "small text-muted" do %>
        <%= helpers.display_time(@record.created_at) %>
      <% end %>

      <% if @record.modified_at %>
        <small class="ml-1 text-muted">
          <i class="fas fa-pencil-alt"></i>
        </small>
      <% end %>
    </div>
  </div>

  <div class="col-auto pl-0">
    <% if @current_user %>
      <%= render Dropdowns::RecordOptionsDropdownComponent2.new(
        current_user: @current_user,
        record: @record
      ) %>
    <% end %>
  </div>
</div>
