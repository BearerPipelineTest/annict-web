<% title = t "head.title.videos.index", title: @anime.local_title %>
<% description = meta_description(t("head.meta.description.videos.index", title: @anime.local_title)) %>
<% image_url = ann_image_url(@anime.anime_image, :image, width: 640) %>
<% set_meta_tags(title: title, description: description, og: { description: description, image: image_url }, twitter: { description: description, image: image_url }, reverse: true, prefix: false) %>

<%= component_value_fetcher_tag("status-select-dropdown", internal_api_library_entry_list_path, method: :post, payload: {anime_ids: [@anime.id]}) %>

<%= Headers::AnimeHeaderComponent.new(self, anime: @anime, programs: @programs).render %>

<div class="py-3">
  <div class="container u-container-flat">
    <div class="card u-card-flat">
      <div class="card-body">
        <div class="g-3 row">
          <% if @videos.present? %>
            <% @videos.each do |video| %>
              <div class="col-md-3 col-6 text-center">
                <%= link_to video.url, rel: "noopener", target: "_blank" do %>
                  <div class="c-video-thumbnail">
                    <div class="c-video-thumbnail__image" style="background-image: url(<%= ann_image_url(video, :image, width: 300) %>);"></div>
                    <i class="far fa-play-circle"></i>
                  </div>

                  <div class="mt-1 small text-body">
                    <%= video.title %>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <%= EmptyV6Component.new(self, text: t("messages._empty.no_resources")) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
