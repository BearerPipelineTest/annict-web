<% title = t "head.title.home.show" %>
<% set_meta_tags(title: title, site: false) %>

<%= component_value_fetcher_tag("status-select-dropdown", internal_api_library_entry_list_path, method: :post, payload: {anime_ids: @anime_ids}) %>

<div class="container py-3">
  <div class="align-items-start justify-content-between row">
    <div class="col-auto">
      <h2 class="fw-bold h3 mb-0">
        <%= t "noun.timeline" %>
      </h2>
    </div>
  </div>

  <% if @activity_groups.present? %>
    <%= TimelineComponent.new(
      self,
      activity_groups: @activity_groups
    ).render %>
  <% else %>
    <div class="container">
      <%= EmptyV6Component.new(self, text: t("messages._empty.no_activities")).render %>
    </div>
  <% end %>
</div>
