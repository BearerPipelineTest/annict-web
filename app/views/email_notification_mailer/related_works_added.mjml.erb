<mj-section background-color="#fff" padding-bottom="0">
  <mj-text align="center">
    <%= I18n.t("email_notification_mailer.related_works_added.description_html", work_title: @work.local_title) %>
  </mj-text>
  <mj-section padding-bottom="10px">
    <mj-text align="center" line-height="22px">
      <%= I18n.t("email_notification_mailer.related_works_added.related_works") %>:
    </mj-text>
    <mj-text align="center">
      <%= @related_works.map { |work| work.local_title }.join(", ") %>
    </mj-text>
  </mj-section>

  <%= render "email_notification_mailer/work", work: @work, utm_campaign: "related_works_added" %>
</mj-section>
