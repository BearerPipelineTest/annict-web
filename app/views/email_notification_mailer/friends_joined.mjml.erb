<mj-wrapper background-color="#fff" padding-left="20px" padding-right="20px">
  <mj-section padding-top="0px">
    <mj-column>
      <mj-text align="center" padding-bottom="10px"><%= I18n.t("email_notification_mailer.friends_joined.joined_#{@provider_name}") %></mj-text>
    </mj-column>
  </mj-section>

  <% @friend_users.each do |friend_user| %>
    <mj-section border="1px solid rgba(0, 0, 0, .08)" padding="10px 20px">
      <mj-column>
        <mj-image padding-bottom="7px" src="<%= ann_image_url(friend_user.profile, :image, size: "140x140") %>" align="center" width="70px" border-radius="50%" href="<%= user_url(friend_user.username, utm_source: 'email_notification', utm_campaign: 'friends_joined', utm_medium: 'email', domain: local_domain) %>"></mj-image>
        <mj-text align="center" font-size="24px" font-weight="600" padding-bottom="3px"><%= "#{friend_user.profile.name}" %></mj-text>
        <mj-text align="center" padding-bottom="7px" padding-top="0"><%= "@#{friend_user.username}" %></mj-text>
        <% if friend_user.profile.description.present? %>
          <mj-text align="center" padding-bottom="7px" line-height="22px"><%= "#{friend_user.profile.description}" %></mj-text>
        <% end %>
        <mj-button href="<%= user_url(friend_user.username, utm_source: 'email_notification', utm_campaign: 'friends_joined', utm_medium: 'email', domain: local_domain) %>" background-color="#f85b73" padding-bottom="10px">
          <%= I18n.t("email_notification_mailer.friends_joined.view_profile") %>
        </mj-button>
      </mj-column>
    </mj-section>
  <% end %>
</mj-wrapper>
