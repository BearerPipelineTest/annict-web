<div class="pl-default">
  <div class="pl-default__sidebar">
    <%= render SidebarComponent.new(user: current_user, search: @search) %>
  </div>

  <div class="pl-default__main d-flex flex-column">
    <div class="pl-default__content">
      <c-flash></c-flash>
      <%= yield %>
    </div>

    <div class="pl-default__footer">
      <%= render FooterComponent.new %>
    </div>

    <div class="pl-default__tab_bar">
      <%= render TabBarComponent.new(user: current_user) %>
    </div>
  </div>
</div>

<c-user-data-fetcher page-category="<%= page_category %>" :params="<%= user_data_fetcher_params.to_json %>"></c-user-data-fetcher>
<c-sign-up-modal></c-sign-up-modal>
