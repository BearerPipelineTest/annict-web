<% title = t "head.title.anime_records.index", anime_title: @anime.local_title %>
<% description = meta_description(t("head.meta.description.anime_records.index", anime_title: @anime.local_title)) %>
<% image_url = ann_anime_image_url(@anime, width: 640) %>
<% set_meta_tags(title: title, description: description, og: { description: description, image: image_url }, twitter: { description: description, image: image_url }, reverse: true, prefix: false) %>

<%= component_value_fetcher_tag("status-select-dropdown", internal_api_library_entry_list_path, method: :post, payload: {anime_ids: [@anime.id]}) %>
<%= component_value_fetcher_tag("like-button", internal_api_like_list_path) %>
<%= component_value_fetcher_tag("spoiler-guard", internal_api_spoiler_guard_path) %>

<%= Headers::AnimeHeaderComponent.new(self, anime: @anime, programs: @programs).render %>

<div class="py-3">
  <div class="container u-container-flat">
    <div class="card u-card-flat">
      <div class="card-body">
        <%= Forms::AnimeRecordFormComponent.new(self, form: @form).render %>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <div
      data-controller="reloadable"
      data-reloadable-event-name-value="anime-record-list-group"
      data-reloadable-url-value="<%= fragment_anime_record_list_path(@anime.id, page: params[:page]) %>"
    >
      <%= ListGroups::RecordListGroupComponent.new(self, my_records: @my_records, following_records: @following_records, all_records: @all_records).render %>
    </div>
  </div>
</div>
