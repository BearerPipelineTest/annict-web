<turbo-frame class="row gy-3" id="<%= dom_id(@activity_group) %>">
  <%= component_value_fetcher_tag("status-select-dropdown", internal_api_library_entry_list_path(anime_ids: @anime_ids)) %>

  <div class="row gy-3">
    <% case @activity_group.itemable_type %>
    <% when "Status" %>
      <% @activity_group.items.each do |status| %>
        <%= Contents::StatusContentComponent.new(self, status: status).render %>
      <% end %>
    <% when "EpisodeRecord" %>
      <% @activity_group.items.each do |record| %>
        <%= Contents::EpisodeRecordContentComponent.new(self, record: record).render %>
      <% end %>
    <% when "WorkRecord" %>
      <% @activity_group.items.each do |record| %>
        <%= Contents::AnimeRecordContentComponent.new(self, record: record).render %>
      <% end %>
    <% end %>
  </div>
</turbo-frame>
