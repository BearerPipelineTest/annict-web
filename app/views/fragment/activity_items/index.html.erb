<turbo-frame class="row gy-3" id="<%= dom_id(@activity_group) %>">
  <div class="row gy-3">
    <% case @activity_group.itemable_type %>
    <% when "Status" %>
      <% @activity_group.items.each do |status| %>
        <%= Contents::StatusContentComponent.new(self,
          status: status,
          page_category: page_category
        ).render %>
      <% end %>
    <% when "EpisodeRecord" %>
      <% @activity_group.items.each do |record| %>
        <%= Contents::EpisodeRecordContentComponent.new(self,
          record: record,
          page_category: page_category
        ).render %>
      <% end %>
    <% when "WorkRecord" %>
      <% @activity_group.items.each do |record| %>
        <%= Contents::AnimeRecordContentComponent.new(self,
          record: record,
          page_category: page_category
        ).render %>
      <% end %>
    <% end %>
  </div>
</turbo-frame>
