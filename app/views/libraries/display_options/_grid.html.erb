<div class="gx-2 gy-3 row">
  <% animes.each_slice(3) do |sliced_animes| %>
    <div class="col-12 col-md-6 col-xl-4">
      <div class="gx-2 gy-3 row">
        <% sliced_animes.each do |anime| %>
          <div class="col-4 text-center">
            <%= Cards::AnimeCardComponent.new(self, anime: anime, width: 140, user: user).render %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
