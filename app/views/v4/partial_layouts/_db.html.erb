<div class="pl-db">
  <div class="c-db-sidebar">
    <%= link_to db_root_path, class: "c-db-sidebar__lockup my-3 px-3" do %>
      <span class="c-db-sidebar__lockup__logo">
        Annict
      </span>
      <span class="c-db-sidebar__lockup__brand">
        DB
      </span>
    <% end %>

    <%= form_tag db_search_path, method: :get, class: "px-1" do %>
      <div class="form-group">
        <%= text_field_tag :q, @search.q, placeholder: t("messages._common.search_with_keywords"), class: "form-control" %>
      </div>
    <% end %>

    <ul class="c-db-sidebar__menu nav navbar-nav px-3">
      <li>
        <%= link_to DbActivity.model_name.human(count: 2), db_activities_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to t("noun.series"), db_series_list_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to Work.model_name.human(count: 2), db_works_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to Person.model_name.human(count: 2), db_people_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to Organization.model_name.human(count: 2), db_organizations_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to Character.model_name.human(count: 2), db_characters_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to t("head.title.db.channel_groups.index"), db_channel_groups_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to t("head.title.db.channels.index"), db_channels_path, class: "d-inline-block" %>
      </li>
      <li>
        <%= link_to t("head.title.db.vod_titles.index"), db_vod_titles_path, class: "d-inline-block" %>
      </li>
    </ul>

    <%= link_to root_path, class: "c-db-sidebar__annict-link d-inline-block text-center" do %>
      <%= image_tag asset_bundle_path("images/logos/color-white.png"), size: "33x40" %>
    <% end %>
  </div>

  <div class="pl-db__main h-100">
    <c-flash></c-flash>
    <%= yield %>
  </div>

  <%= render "application/analytics" %>
</div>

<%= render "application/font_awesome" %>
<%= render "application/js_templates/flash" %>
<%= yield :js_templates %>
