<% title = t "head.title.anime_records.index", anime_title: @anime.local_title %>
<% description = meta_description(t("head.meta.description.anime_records.index", anime_title: @anime.local_title)) %>
<% image_url = @anime_entity.image_url_1x %>
<% set_meta_tags(title: title, description: description, og: { description: description, image: image_url }, twitter: { description: description, image: image_url }, reverse: true, prefix: false) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 pr-md-0 py-3">
      <%= render Sidebars::AnimeSidebarComponent.new(anime_entity: @anime_entity, vod_channel_entities: @existing_vod_channel_entities, viewer: current_user) %>
    </div>

    <div class="col-md-9">
      <div class="mb-3">
        <%= render WorkSubNavComponent.new(work_entity: @anime_entity, page_category: page_category) %>
      </div>

      <div class="mb-5">
        <%= render Forms::AnimeRecordFormComponent.new(form: @form, viewer: current_user) %>
      </div>

      <hr class="mb-5">

      <div class="mb-3">
        <h3 class="fw-bold mb-3">
          <%= t "noun.my_records" %>
        </h3>

        <%= render Lists::RecordListComponent.new(viewer: current_user, record_entities: @my_record_entities, show_card: false) %>
      </div>

      <hr class="mb-5">

      <div class="mb-3">
        <h3 class="fw-bold mb-3">
          <%= t "noun.following_records" %>
        </h3>

        <%= render Lists::RecordListComponent.new(viewer: current_user, record_entities: @following_record_entities, show_card: false) %>
      </div>

      <hr class="mb-5">

      <div class="mb-3">
        <h3 class="fw-bold mb-3">
          <%= t "noun.other_comments" %>
        </h3>

        <%= render Lists::RecordListComponent.new(viewer: current_user, record_entities: @other_record_entities, show_card: false) %>
      </div>
    </div>
  </div>
</div>
