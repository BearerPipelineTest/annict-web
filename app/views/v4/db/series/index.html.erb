<% title = t "head.title.db.series.index" %>
<% set_meta_tags(title: title, reverse: true, prefix: false) %>

<%= render "v4/partial_layouts/db" do %>
  <div class="container-fluid py-3">
    <div class="mb-3">
      <h1>
        <%= t "head.title.db.series.index" %>
      </h1>

      <% if policy(@series_list).create? %>
        <div class="text-right">
          <%= link_to new_db_series_path, class: "btn btn-outline-primary" do %>
            <%= icon "plus" %>
            <%= t "resources.series.new_series" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= render "v4/db/series/series_list", series_list: @series_list %>
    </div>

    <div class="text-center">
      <%= paginate @series_list %>
    </div>
  </div>
<% end %>
