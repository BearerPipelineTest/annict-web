<% title = t "head.title.oauth_users.new" %>
<% set_meta_tags title: title, reverse: true, prefix: false %>

<div class="container">
  <div class="justify-content-center row">
    <div class="col-12 col-lg-6 py-5">
      <div class="mb-5 text-center">
        <%= link_to root_path do %>
          <%= image_tag asset_bundle_path("images/logos/color-mizuho.png"), size: "50x61", alt: "Annict" %>
        <% end %>
      </div>

      <div class="c-sign-up-form-via-oauth px-3 mb-3">
        <h1 class="my-5 text-center">
          <%= t("messages.oauth_users.new.sign_up_with_oauth", provider_name: @oauth["provider"].humanize) %>
        </h1>

        <%= form_for @user, url: oauth_users_path do |f| %>
          <%= render "application/components/error_panel", resource: @user %>

          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control", autofocus: true, required: true, placeholder: "BK201" %>
            <small class="text-muted form-text">
              <%= t "messages.registrations.new.username_hint" %>
            </small>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, type: "email", class: "form-control", required: true, placeholder: "hei@example.com" %>
          </div>

          <div class="form-group form-check">
            <%= f.check_box :terms_and_privacy_policy_agreement, class: "form-check-input" %>
            <%= f.label :terms_and_privacy_policy_agreement, class: "form-check-label" do %>
              <%= t "activerecord.attributes.user.terms_and_privacy_policy_agreement_html" %>
            <% end %>
          </div>

          <div class="text-center">
            <%= f.button class: "btn btn-primary" do %>
              <%= icon "rocket" %>
              <%= t "noun.sign_up" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
