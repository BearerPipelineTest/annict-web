<% title = t "head.title.registrations.new" %>
<% description = meta_description t("head.meta.description.registrations.new") %>
<% set_meta_tags(title: title, description: description, og: { description: description }, twitter: { description: description }, reverse: true, prefix: false) %>

<div class="container">
  <div class="justify-content-center row">
    <div class="col-6 py-5">
      <div class="mb-5 text-center">
        <%= link_to root_path do %>
          <%= image_tag asset_bundle_path("images/logos/color-mizuho.png"), size: "50x61", alt: "Annict" %>
        <% end %>
      </div>
      <div class="c-card px-3 mb-3">
        <%= render "application/components/sign_up_form", user: @new_user %>
      </div>
      <div class="text-center">
        <small>
          <%= t "messages.registrations.new.sign_in_link_html", link: link_to(t("noun.sign_in"), new_user_session_path) %>
        </small>
      </div>
    </div>
  </div>
</div>
