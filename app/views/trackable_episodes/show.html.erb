<turbo-frame id="c-tracking-modal__frame">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col">
            <div>
              <%= link_to trackable_anime_path(@episode.work_id) do %>
                <i class="far fa-angle-left"></i>
                <span class="pl-1">
                  <%= @episode.work.local_title %>
                </span>
              <% end %>
            </div>

            <h3 class="my-1">
              <%= @episode.title_with_number %>
            </h3>

            <%= link_to anime_path(@anime.id), class: "small", data: { "turbo-frame": "_top" } do %>
              <%= t("noun.anime_page") %>
              <i class="far fa-angle-right pl-1"></i>
            <% end %>

            <%= link_to episode_path(@anime.id, @episode.id), class: "ml-2 small", data: { "turbo-frame": "_top" } do %>
              <%= t("noun.episode_page") %>
              <i class="far fa-angle-right pl-1"></i>
            <% end %>
          </div>

          <div class="col-auto">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>

        <div class="mt-3">
          <turbo-frame id="episode-record-form" src="<%= my_episode_record_form_path(@episode.id) %>" target="_top"></turbo-frame>
        </div>

        <hr class="mt-3">

        <div class="mt-3">
          <turbo-frame
            autoscroll="start"
            data-controller="reloadable-frame"
            data-reloadable-frame-event-name-value="my-episode-record-list"
            data-reloadable-frame-target="frame"
            id="my-episode-record-list"
            src="<%= my_episode_record_list_path(@episode.id, page: params[:page]) %>"
          ></turbo-frame>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
