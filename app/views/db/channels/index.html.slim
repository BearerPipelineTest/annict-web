- title = t "head.title.db.channels.index"
- set_meta_tags(title: title, reverse: true, prefix: false)


.l-topbar.container-fluid.px-3
  .row.flex-items-xs-between
    .col-8
      = render "db/application/topbar_title", parent: title
    - if user_signed_in? && current_user.role.admin?
      .col.text-right
        = link_to new_db_channel_path, class: "btn btn-outline-primary" do
          = icon "edit"
          = t "resources.channel.new_channels"

.container-fluid.p-3.mb-4
  = render "channel_list", channels: @channels
