<% title = t "head.title.db.series.new" %>
<% set_meta_tags(title: title, reverse: true, prefix: false) %>

<div class="container py-3">
  <div>
    <h1>
      <%= t "resources.series.new_series" %>
    </h1>
  </div>

  <div class="gx-3 row mt-3">
    <div class="col-6">
      <div class="card rounded-3">
        <div class="card-body">
          <%= render "form", model: @series, form_url: db_series_list_path, form_method: :post %>
        </div>
      </div>
    </div>

    <div class="col-6">
      <%= render "sidebar" %>
    </div>
  </div>
</div>
