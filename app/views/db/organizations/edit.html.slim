- title @organization.name

.l-topbar.container-fluid.px-3
  .row.flex-items-xs-between
    .col-8
      = render "db/application/topbar_title", parent: @organization.local_name.truncate(70)
    .col.text-right
      = link_to organization_url(@organization, subdomain: false), class: "btn btn-outline-primary" do
        = icon "external-link-alt"
        = t "resources.organization.go_to_organization"

.container-fluid.p-3
  .row
    .col-6
      .c-card.p-3
        = render "form", organization: @organization
    .col-6
      = render "sidebar"
