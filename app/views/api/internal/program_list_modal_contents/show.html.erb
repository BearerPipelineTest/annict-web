<div
  data-controller="program-list-modal-content"
>
  <h2>
    <%= t "messages._components.program_list_modal_content.title" %>
  </h2>

  <p>
    <%= t "messages._components.program_list_modal_content.description" %>
  </p>

  <div class="container-fluid">
    <div
      class="row"
    >
      <% @program_entities.each do |program_entity| %>
        <div class="col-6 mb-3">
          <input
            class="form-check-input"
            data-target="program-list-modal-content.programId"
            id="<%= program_entity.id %>"
            name="program"
            type="radio"
            value="<%= program_entity.id %>"
          >
          <label class="form-check-label" for="<%= program_entity.id %>">
            <div>
              <%= program_entity.channel.name %>
            </div>
            <small>
              <%= display_time(program_entity.started_at) %>~
            </small>
          </label>
        </div>
      <% end %>
    </div>

    <div class="text-center">
      <button
        class="btn btn-primary"
        data-action="program-list-modal-content#check"
        type="button"
      >
        <%= t "verb.check" %>
      </button>
    </div>
  </div>
</div>
