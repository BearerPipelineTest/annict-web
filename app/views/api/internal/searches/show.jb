# frozen_string_literal: true

json = {}

json[:works] = @works.map { |work|
  {
    id: work.id,
    title: work.local_title
  }
}

json[:people] = @people.map { |person|
  {
    id: person.id,
    name: person.local_name
  }
}

json[:organizations] = @organizations.map { |organization|
  {
    id: organization.id,
    name: organization.local_name
  }
}

json[:characters] = @characters.map { |character|
  {
    id: character.id,
    name: character.local_name
  }
}

json
