<% title = t "head.title.settings.emails.show" %>
<% set_meta_tags title: title, reverse: true, prefix: false %>

<%= render "settings/nav" %>

<div class="mt-3 u-container-narrow u-container-flat">
  <div class="card u-card-flat">
    <div class="card-body">
      <%= form_for @user_email_form, url: settings_email_path do |f| %>
        <%= render "application/components/error_panel", resource: @user_email_form %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="form-submit text-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
