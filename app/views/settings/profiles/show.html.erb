<% title = t "head.title.settings.profiles.show" %>
<% set_meta_tags title: title, reverse: true, prefix: false %>

<%= render "settings/nav" %>

<div class="mt-3 u-container-narrow u-container-flat">
  <div class="card u-card-flat">
    <div class="card-body">
      <%= form_for current_user.profile, url: settings_profile_path, method: :patch do |f| %>
        <%= render "application/components/error_panel", resource: current_user.profile %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_field :description, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :url, class: "form-label" %>
          <%= f.text_field :url, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :avatar, class: "form-label" %>
          <%= f.hidden_field :image, value: f.object.cached_image_data %>
          <%= f.file_field :image, class: "form-control" %>
        </div>

        <div class="form-submit text-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
