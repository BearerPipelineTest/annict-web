.c-sign-up-form
  h1.text-center.mt-3.mb-4 = t "messages._common.join_annict"

  .text-center.mb-3
    = link_to user_twitter_omniauth_authorize_path, class: "btn u-btn-twitter" do
      = icon "twitter", "fab"
      = t "messages.registrations.new.start_with_twitter"
  .text-center
    = link_to user_facebook_omniauth_authorize_path, class: "btn u-btn-facebook" do
      = icon "facebook", "fab"
      = t "messages.registrations.new.start_with_facebook"

  .text-muted.text-center.mt-4.mb-3
    = t "noun.or"

  = form_for user, url: user_registration_path do |f|
    = render "application/components/error_panel", resource: user

    .form-group
      = f.label :username
      = f.text_field :username, class: "form-control", autofocus: true, required: true

    .form-group
      = f.label :email
      = f.text_field :email, type: "email", class: "form-control", required: true

    .form-group
      = f.label :password
      = f.password_field :password, autocomplete: "off", class: "form-control", required: true

    .form-group.form-check
      = f.check_box :terms_and_privacy_policy_agreement, class: "form-check-input"
      = f.label :terms_and_privacy_policy_agreement, class: "form-check-label" do
        = t "activerecord.attributes.user.terms_and_privacy_policy_agreement_html"

    .text-center
      = f.button class: "btn btn-primary" do
        = icon "rocket"
        = t "noun.sign_up"
