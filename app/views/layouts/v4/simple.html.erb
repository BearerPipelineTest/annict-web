<%= content_for :head_assets do %>
  <%= stylesheet_bundle_tag "v4.css", media: "all", "data-turbo-track": "reload" %>
  <%= javascript_bundle_tag "v4.js", defer: "", "data-turbo-track": "reload" %>
<% end %>

<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "application/head" %>
  </head>
  <body>
    <div class="ann-application">
      <div
        class="l-simple"
        data-controller="application"
        data-application-page-category="<%= page_category %>"
        data-application-params="<%= user_data_fetcher_params.to_json %>"
      >
        <%= render FlashComponent.new(flash) %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
