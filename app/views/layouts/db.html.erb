<%= content_for :head_assets do %>
  <%= stylesheet_bundle_tag "application.css", media: "all", "data-turbo-track": "reload" %>
  <%= javascript_bundle_tag "application.js", defer: "", "data-turbo-track": "reload" %>
<% end %>

<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "application/head" %>
  </head>
  <body>
    <div class="l-db-default">
      <div class="l-db-default__sidebar">
        <%= render Db::SidebarComponent.new(search: @search) %>
      </div>
      <div class="l-db-default__main d-flex flex-column">
        <div class="f-application__main__content">
          <%= render FlashComponent.new(flash) %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
